<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.webin.mysummonerv1.ChampionsActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearLayout"
        android:fitsSystemWindows="true">

        <ProgressBar
            android:id="@+id/pb_ChampionLoader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <GridView
            android:id="@+id/gv_ChampionGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:columnWidth="100dp"
            android:gravity="center"
            android:numColumns="4"
            android:paddingBottom="10dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp">
        </GridView>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#00b1a1"
        android:shape="line"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/ivSearchSummoner"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/icon_search"
            android:focusable="true"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/ivChampions"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/icon_champion"
            android:focusable="true"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/icon_setting"
            android:focusable="true"
            android:clickable="true"/>


    </LinearLayout>


</RelativeLayout>
