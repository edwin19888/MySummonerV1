<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOLO/DUO"
            android:layout_centerHorizontal="true"
            android:id="@+id/tvRankedName" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_below="@+id/tvRankedName"
            android:layout_centerHorizontal="true"
            android:id="@+id/ivRanked" />

        <TextView
            android:id="@+id/tvLeagueNameSolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ivRanked"
            android:text="Unranked" />
        <TextView
            android:id="@+id/tvRankedInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLeagueNameSolo"
            android:layout_centerHorizontal="true"
            android:text="76 61W 51L"/>


    </RelativeLayout>


</RelativeLayout>