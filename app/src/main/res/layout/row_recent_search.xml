<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rvPlayerRecent"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/ivRSrefresh"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:background="@drawable/ic_action_refresh" />

        <ImageView
            android:id="@+id/ivRSprofileIconId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/ivRSrefresh"
            android:layout_toRightOf="@+id/ivRSrefresh"/>

        <TextView
            android:id="@+id/tvRSPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivRSprofileIconId"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/ivRSprofileIconId"
            android:layout_toRightOf="@+id/ivRSprofileIconId"/>

        <TextView
            android:id="@+id/tvRSLabelLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvRSPlayer"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tvRSPlayer"
            android:layout_below="@+id/tvRSPlayer"
            android:text="Lv"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvRSsummonerLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvRSLabelLevel"
            android:layout_below="@+id/tvRSPlayer"
            android:layout_toEndOf="@+id/tvRSLabelLevel"
            android:layout_toRightOf="@+id/tvRSLabelLevel"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvRSaccountId"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/tvRSsummonerLevel"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/tvRSsummonerLevel"
            android:layout_toRightOf="@+id/tvRSsummonerLevel"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/tvRSid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/tvRSaccountId"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tvRSaccountId"
            android:layout_toRightOf="@+id/tvRSaccountId"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvRSTier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRSPlayer"
            android:layout_toEndOf="@+id/tvRSid"
            android:layout_toRightOf="@+id/tvRSid"
            android:text="Unranked"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvRSRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvRSTier"
            android:layout_alignBottom="@+id/tvRSTier"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tvRSTier"
            android:layout_toRightOf="@+id/tvRSTier"
            android:textSize="10dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tvPlataforma"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/rvDeleteItem"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/tvRSsummonerLevel"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/ivDeleteItem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_action_delete" />

        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>