<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webin.mysummonerv1.HomeActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview"
        />

    <RelativeLayout
        android:id="@+id/rlHome"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#02111D"
        android:shape="line">

        <ImageView
            android:id="@+id/ivSearchSummoner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/icon_search"
            android:focusable="true"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/ivChampions"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/ivSearchSummoner"
            android:src="@drawable/icon_champions"
            android:focusable="true"
            android:clickable="true"/>


        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/icon_setting" />


    </RelativeLayout>

</RelativeLayout>
